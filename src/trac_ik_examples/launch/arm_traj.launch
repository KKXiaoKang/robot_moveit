<?xml version="1.0"?>
<launch>
  <arg name="num_samples" default="1000" />
  <arg name="chain_start" default="base_link" />
  <arg name="lchain_end" default="l_hand_pitch" />
  <arg name="rchain_end" default="r_hand_pitch" />
  <arg name="timeout" default="0.005" />

  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find kuavo_with_finger)/urdf/kuavo_with_finger.urdf'" />


  <node name="trac_ik_test2" pkg="trac_ik_examples" type="arm_traj" output="screen">
    <param name="num_samples" value="$(arg num_samples)"/>
    <param name="chain_start" value="$(arg chain_start)"/>
    <param name="lchain_end" value="$(arg lchain_end)"/>
    <param name="rchain_end" value="$(arg rchain_end)"/>
    <param name="timeout" value="$(arg timeout)"/>
    <param name="urdf_param" value="/robot_description"/>
  </node>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
           respawn="false" output="screen">
       <remap from="/joint_states" to="/kuavo_arm_traj" />
  </node>

</launch>
